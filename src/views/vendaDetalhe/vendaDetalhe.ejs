                                <th>Produto</th>
                                <th>Quantidade</th>
                                <th class="text-center">Preço</th>
                                <th class="text-center">SubTotal</th>
                            </tr>
                        </thead>
                        <tbody>

                            <%
                            let total = 0;
                            let produtoObj = [];
                            if(produtos){
                                produtos.map(function(produto){
                                    produtoObj.push([
                                        '[' + produto.codigo,
                                        produto.nome,
                                        produto.preco,
                                        produto.qtd,
                                        produto.subtotal + ']'
                                    ])
                                    %>

