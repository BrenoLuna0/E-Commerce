                                        <p><%=produto.qtd%></p>
                                    </form>
                                </td>
                                <td class="col-sm-1 col-md-1 text-center"><strong>$<%=produto.preco%></strong>
                                </td>
                                <td class="col-sm-1 col-md-1 text-center">
                                    <strong>$<%=produto.subtotal%></strong></td>

                            </tr>

                            <%

                                    total += produto.subtotal;
                                })
                            }%>
