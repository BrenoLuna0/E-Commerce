  <script>
    $('.alert').hide();
    function adicionarNoCarrinho(idProduto) {
      let alertName = '#alert' + idProduto;
      console.log(alertName);
      let postObject = {
        produto: idProduto,
        qtd: 1,
        dif: true
      };

      $.post("/carrinho/add", postObject, function (data) {
        if (data) {
          console.log('Deu Certo');
          $(alertName).show();
        } else {
          console.log('Deu Errado');
        }
      });

    }
  </script>

