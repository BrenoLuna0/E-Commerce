    <main class="mt-5 pt-4">
      <div class="container dark-grey-text mt-5">
        <div class="centralizar">
          <p><h2><%=produto.PROD_DESCRICAO%></h2></p>
        </div>

        <!--Grid row-->
        <div class="row wow fadeIn">

          <!--Grid column-->
          <div class="col-md-6 mb-4">

            <img src=<%= produto.PROD_IMAG_PATH%> class="img-fluid" width="400" height="350">

          </div>
          <!--Grid column-->

          <!--Grid column-->
          <div class="col-md-6 mb-4">

            <!--Content-->
            <div class="p-4">

              <p class="lead">
                <span>$<%=produto.PROD_PRECO%></span>
              </p>

              <p class="lead font-weight-bold">Descrição</p>

              <p><%=produto.PROD_IMAG_DESCRICAO%></p>


              <form id="addCarinho" class="d-flex justify-content-left" action="/carrinho/add" method="POST">
                <!-- Default input -->
                <input id="qtdId" type="number" name="qtd" value="1" aria-label="Search" class="form-control"
                  style="width: 100px" min="1">
                <input type="hidden" name="produto" value=<%=produto.PROD_CODIGO%>>
                <button style="width: 200px" class=""
                  onclick="adicionarNoCarrinho('<%=produto.PROD_CODIGO%>', $('#qtdId').val())" type="button">Adicionar
                  no Carrinho
                  <i class="fas fa-shopping-cart ml-1"></i>
                </button>

              </form>
              <%

            }) 
            %>

            </div>
            <!--Content-->

          </div>
          <!--Grid column-->

        </div>
        <!--Grid row-->

        <hr>

        <!--Grid row-->
