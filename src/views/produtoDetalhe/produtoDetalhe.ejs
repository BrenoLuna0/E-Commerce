                  <a href=<%='/produto/' + produto.PROD_CODIGO%>>
                    <p><strong><%=produto.PROD_DESCRICAO%></strong></p>
                  </a>
                  <div>
                    <button class="" onclick="adicionarNoCarrinho('<%=produto.PROD_CODIGO%>',1)"
                      id=<%='button'+produto.PROD_CODIGO %>>Adicionar ao
                      Carrinho</button>
                  </div>
